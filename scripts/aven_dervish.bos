#include "exptype.h"

#define SPEEDUP_FACTOR	150

#define HEADING_TOLERANCE	<25>
#define PITCH_TOLERANCE		<15>

piece  flare1, flare2, torso, hips, lthigh, rthigh, rleg, lleg, rfoot, head, luparm, lgunbase, lgunshaft, ruparm, rgunbase, rgunshaft, rshoulder, lshoulder,
       larm, rarm, lfoot, lgunbarrel, rgunbarrel;

static-var  Static_Var_1, gun_1, bMoving, bAiming, Static_Var_5, statechg_DesiredState, statechg_StateChanging, mATurnSpd1,mATurnSpd2,mATurnSpd3,mASpdFactor, mAMoveSpd1, mAVertFactor, isOpen, legAngle1, legAngle2, legAngle3;

#include "aimhelper1.h"

