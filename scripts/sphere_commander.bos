MotionSpeedControl(minSpeed, maxSpeed,currentSpeed)
{
	maxSpeed = get MAX_SPEED;
	currentSpeed = 0;
	mASpdFactor = SPEEDUP_FACTOR;
	minSpeed = SPEEDUP_FACTOR;
	
	while(TRUE)
	{
		currentSpeed = get CURRENT_SPEED;
		mASpdFactor = SPEEDUP_FACTOR * currentSpeed / maxSpeed;

		//call-script lua_cobDebug(mASpdFactor);
		if ( mASpdFactor < minSpeed )
		{
			mASpdFactor = minSpeed;
		}

		sleep 60;
	}
}

checkUnderwater()
{
	var currentHeight, oldState;
	while(TRUE)
	{   
 		currentHeight = GET GROUND_WATER_HEIGHT(GET UNIT_XZ);
 		oldState = bUnderwater;
		
		// check current state
		if ( currentHeight < [-30])
 		{
 			bUnderwater = TRUE;
		
 		}
 		if (currentHeight >= [-30])
 		{
 			bUnderwater = FALSE;
 		}
 		
 		// handle state changes
 		if (oldState != bUnderwater)
 		{
			if(bUnderwater)
			{
				//no beam stuff to hide
				
				//TODO show weapon morph stuff
				sleep 1000;

				
				//show torpedo stuff 			
 				move torpedo to z-axis [0.000000] now;
 				show arc2;
 				show weapon2;
 				show torpedo;
 				
 				sleep 200;
 				canAim1 = FALSE;
 				canAim2 = TRUE;
			}
			if(!bUnderwater)
			{
				//hide torpedo stuff
				hide torpedo;
				hide weapon2;
				hide arc2;
				move torpedo to z-axis [0.000000] now;
				
				//TODO show weapon morph stuff
				sleep 1000;

				//no beam stuff to show

				sleep 200;
 				canAim1 = TRUE;
 				canAim2 = FALSE;
 				
			}
 		}
 		
 		sleep 500;
	}
	return 0;	
}
