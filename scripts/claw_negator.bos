#define TA			// This is a TA script

#include "sfxtype.h"
#include "exptype.h"

piece  base, jammerbase, wake1, wake2, hull,bottom,h2,h3, turret, holder, fork, l1, l2, l3;

// Signal definitions
#define SIG_MOVE			2


SmokeUnit(healthpercent, sleeptime, smoketype)
{
	while( get BUILD_PERCENT_LEFT )
	{
		sleep 400;
	}
	while( TRUE )
	{
		healthpercent = get HEALTH;
		if( healthpercent < 66 )
		{
			smoketype = 256 | 2;
			if( Rand( 1, 66 ) < healthpercent )
			{
				smoketype = 256 | 1;
			}
			emit-sfx smoketype from base;
		}
		sleeptime = healthpercent * 50;
		if( sleeptime < 200 )
		{
			sleeptime = 200;
		}
		sleep sleeptime;
	}
	return (0);
}

Create()
{
	dont-cache base;
	dont-shade base;
	start-script SmokeUnit();
	return (0);
}

Activate()
{
	spin fork around z-axis speed <360.021978>;
	return (0);
}

Deactivate()
{
	spin fork around z-axis speed <0.000000>;
	return (0);
}

StartMoving()
{
	signal SIG_MOVE;
	set-signal-mask SIG_MOVE;
	while( TRUE )
	{
		emit-sfx 2 from wake1;
		emit-sfx 2 from wake2;
		sleep 250;
	}
	return (0);
}

StopMoving()
{
	signal SIG_MOVE;
	return (0);
}


Killed(severity, corpsetype)
{
	if( severity <= 50 )
	{
		explode base type SHATTER;
		explode fork type SHATTER | BITMAP2;
		return (1);
	}

	explode hull type SHATTER;
	explode bottom type SHATTER;
	explode base type SHATTER;
	explode fork type SHATTER | EXPLODE_ON_HIT | BITMAP2;
	return (2);
}
