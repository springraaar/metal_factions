StartBuilding(heading, pitch)
{
	signal SIG_AIM;
	set-signal-mask SIG_AIM;
	bBuilding = TRUE;
	bAiming = TRUE;
	call-script updateAimHelper1(heading,pitch + <90.000000>,<500>,<400>,HEADING_TOLERANCE,PITCH_TOLERANCE);
